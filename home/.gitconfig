[user]
	name = Zach Shipley
	email = zach@zachshipley.com
[alias]
	lg = log --graph --pretty=format:'%C(yellow)%h%C(reset) - %C(bold)%an%C(reset) %C(dim white)%ai (%ar)%C(reset)%C(red)%d%C(reset)%n''          %s'
	mine = log --author zach --date local --decorate
	subup = !"git pull; git submodule init; git submodule update; git submodule status"
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
[browser "chrome"]
	path = /usr/bin/google-chrome
[browser "firefox"]
	path = /usr/local/firefox/firefox
[branch]
	autosetuprebase = always
[push]
	default = upstream
[merge]
	tool = meld
